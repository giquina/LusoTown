{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "strict": false,
    "skipLibCheck": true,
    "types": ["jest", "@testing-library/jest-dom", "node"]
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "__tests__/**/*",
    "src/test-utils.ts",
    "src/test-*.ts",
    "jest.config.js",
    "jest.setup.js"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist"
  ]
}