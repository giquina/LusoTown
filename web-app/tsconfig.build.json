{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "es2022"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/app/**/*.ts",
    "src/app/**/*.tsx",
    "src/config/**/*.ts",
    "src/context/**/*.ts",
    "src/hooks/**/*.ts",
    "src/lib/**/*.ts",
    "src/services/**/*.ts",
    "src/utils/**/*.ts",
    "src/types/**/*.ts",
    "src/components/ui/**/*.ts",
    "src/components/ui/**/*.tsx",
    "src/components/Header.tsx",
    "src/components/Footer.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**/*",
    "src/components/matches/**/*",
    "src/components/ai/**/*",
    "src/components/signup/MobileRegistrationFlow.tsx",
    "src/components/PortugueseCulturalCalendar.tsx",
    "src/components/FestaIntegrationHub.tsx",
    "src/components/LusophoneDiversityShowcase.tsx",
    "src/components/PortugueseUniversityNetwork.tsx",
    "src/components/UserOnboardingFlow.tsx",
    "src/components/**/RegionalSpecializationAI.tsx",
    "src/components/**/SaudadeMatchingSystem.tsx",
    "src/components/**/BehavioralLearningEngine.tsx"
  ]
}
