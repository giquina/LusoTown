# Portuguese Community Streaming Configuration
# Add these variables to your .env.local file

# LiveKit Configuration (Required for streaming)
NEXT_PUBLIC_LIVEKIT_URL=wss://lusotown-streaming.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# Streaming Server Configuration
NEXT_PUBLIC_STREAMING_SERVER_URL=http://localhost:8080

# Portuguese Community Features
NEXT_PUBLIC_ENABLE_STREAMING=true
NEXT_PUBLIC_STREAMING_CATEGORIES=musica,culinaria,cultura,danca,artesanato,eventos,conversas

# Chat and Real-time Features
NEXT_PUBLIC_ENABLE_STREAMING_CHAT=true
NEXT_PUBLIC_STREAMING_CHAT_MAX_LENGTH=200

# Cultural Content Settings
PORTUGUESE_STREAMING_MODERATION=true
CULTURAL_AUTHENTICITY_CHECK=true
LUSOPHONE_PRIORITY_STREAMING=true

# Analytics and Monitoring
STREAMING_ANALYTICS_ENABLED=true
PORTUGUESE_COMMUNITY_TRACKING=true