# Supabase Configuration for LusoTown London Web App
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Database direct connection (for admin operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Stripe Configuration (for payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key_here

# App Configuration
NEXT_PUBLIC_APP_URL=https://lusotown.london
NEXT_PUBLIC_SITE_URL=https://lusotown.london
NEXT_PUBLIC_APP_NAME=LusoTown London

# Development URLs (local development)
# NEXT_PUBLIC_APP_URL=http://localhost:3000

# Cloudinary Configuration for Image Optimization
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
NEXT_PUBLIC_CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Optional: Cloudinary Upload Preset for client-side uploads
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=lusotown_uploads

# Redis Configuration for Rate Limiting (Production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# Alternative: Upstash Redis (Serverless Redis)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# Rate Limiting Configuration
RATE_LIMITING_ENABLED=true
TRUSTED_PARTNER_IPS=192.168.1.1,10.0.0.1
COMMUNITY_ABUSE_THRESHOLD=10

# Sentry Error Monitoring Configuration for Portuguese Community Platform
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-key@o1234567890123456.ingest.sentry.io/4504841234567890
SENTRY_DSN=https://your-sentry-dsn-key@o1234567890123456.ingest.sentry.io/4504841234567890
SENTRY_ORG=lusotown-community
SENTRY_PROJECT=lusotown-web
SENTRY_AUTH_TOKEN=your-sentry-auth-token-here
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=0.1
SENTRY_TRACES_SAMPLE_RATE=0.05

# Portuguese Community Specific Monitoring
NEXT_PUBLIC_ERROR_MONITORING_ENABLED=true
PORTUGUESE_COMMUNITY_ERROR_THRESHOLD=0.05
BILINGUAL_ERROR_TRACKING=true
CULTURAL_FEATURE_MONITORING=true

# Production Deployment Configuration
NEXT_PUBLIC_VERCEL_URL=https://your-app.vercel.app
NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA=production-commit-sha
NEXT_PUBLIC_DEPLOYMENT_REGION=lhr1
NEXT_PUBLIC_BUILD_TIME_TRACKING=true

# Error Monitoring Configuration
NEXT_PUBLIC_ERROR_MONITORING_ENABLED=true
ALERT_RECIPIENTS=alerts@lusotown.com,dev-team@lusotown.com
PERFORMANCE_ALERT_RECIPIENTS=performance@lusotown.com
CRITICAL_ALERT_RECIPIENTS=critical@lusotown.com,emergency@lusotown.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK