# LusoTown Ad Revenue System - Environment Configuration

# Database Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_KEY=your_supabase_service_key
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Streaming Server Configuration
NEXT_PUBLIC_STREAMING_SERVER_URL=http://localhost:8080
PORT=8080
HOST=0.0.0.0

# Google AdSense Configuration
GOOGLE_ADSENSE_PUBLISHER_ID=pub-your-publisher-id
GOOGLE_ADSENSE_CLIENT_ID=ca-pub-your-client-id

# Ezoic Configuration
EZOIC_SITE_ID=your-ezoic-site-id
EZOIC_API_KEY=your-ezoic-api-key

# Propeller Ads Configuration
PROPELLER_ZONE_ID=your-propeller-zone-id
PROPELLER_WEBSITE_ID=your-propeller-website-id

# Email Configuration for Reports
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password
ADMIN_EMAIL=admin@lusotown.com

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=lusotown_redis_2025

# Security
JWT_SECRET=your-jwt-secret-key
API_SECRET_KEY=your-api-secret-key

# Environment
NODE_ENV=development

# GeoIP Configuration (Optional)
GEOIP_API_KEY=your-geoip-api-key

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# CORS Origins (Production)
ALLOWED_ORIGINS=https://lusotown.com,https://www.lusotown.com

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Ad Serving Configuration
DEFAULT_CPM_RATE=0.50
DEFAULT_CPC_RATE=0.25
FALLBACK_AD_ENABLED=true
MAX_ADS_PER_SESSION=5

# Portuguese Cultural Targeting
PORTUGUESE_COUNTRIES=PT,BR,AO,MZ,CV,GW,ST,TL,MO
PORTUGUESE_LANGUAGES=pt,pt-BR,pt-PT

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
ERROR_REPORTING_ENABLED=true
DEBUG_MODE=false