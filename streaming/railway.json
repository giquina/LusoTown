{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3002",
        "HOST": "0.0.0.0",
        "RTMP_PORT": "1935",
        "HTTP_PORT": "8080",
        "LUSOTOWN_STREAMING_SECRET": "${{RAILWAY_STATIC_URL}}_streaming_secret_2025",
        "CORS_ALLOWED_ORIGINS": "https://lusotown-london.vercel.app,https://*.vercel.app,https://lusotown.com,https://*.lusotown.com",
        "CULTURAL_CONTENT_BOOST": "true",
        "PORTUGUESE_LANGUAGE_PRIORITY": "true",
        "COMMUNITY_CHAT_ENABLED": "true",
        "PORTUGUESE_EMOTES_ENABLED": "true"
      }
    }
  }
}