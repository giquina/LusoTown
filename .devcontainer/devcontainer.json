{
  "name": "LusoTown Portuguese Streaming Platform",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-docker",
        "ms-vscode.vscode-json",
        "formulahendry.auto-rename-tag",
        "ms-vscode.vscode-eslint",
        "ms-vscode.js-debug"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "typescript.preferences.quoteStyle": "single",
        "javascript.preferences.quoteStyle": "single",
        "editor.tabSize": 2,
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 1000
      }
    }
  },
  
  "forwardPorts": [
    1935,  // RTMP for Streamlabs ingestion
    8080,  // HLS streaming output  
    1985,  // SRS API management
    3000,  // LusoTown web platform
    3002,  // Streaming API server
    6379   // Redis
  ],
  
  "portsAttributes": {
    "1935": {
      "label": "ðŸŽ¥ RTMP Ingestion (Streamlabs)",
      "protocol": "tcp",
      "visibility": "public",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "ðŸ“º HLS Streaming Output",
      "protocol": "https", 
      "visibility": "public",
      "onAutoForward": "notify"
    },
    "1985": {
      "label": "ðŸ”§ SRS API Management",
      "protocol": "https",
      "visibility": "public",
      "onAutoForward": "silent"
    },
    "3000": {
      "label": "ðŸ‡µðŸ‡¹ LusoTown Web Platform",
      "protocol": "https",
      "visibility": "public",
      "onAutoForward": "notify"
    },
    "3002": {
      "label": "ðŸš€ Streaming API Server",
      "protocol": "https",
      "visibility": "public",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "ðŸ’¾ Redis",
      "protocol": "tcp",
      "visibility": "private",
      "onAutoForward": "silent"
    }
  },
  
  "postCreateCommand": "cd web-app && npm install && echo 'ðŸ‡µðŸ‡¹ LusoTown Portuguese streaming environment ready!'",
  
  "remoteUser": "node",
  
  "mounts": [
    "source=lusotown-node-modules,target=${containerWorkspaceFolder}/web-app/node_modules,type=volume",
    "source=lusotown-streaming-modules,target=${containerWorkspaceFolder}/streaming/node_modules,type=volume"
  ]
}
