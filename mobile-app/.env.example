# LusoTown Mobile App Environment Configuration
# Copy this file to .env.local and fill in your values
# Following LusoTown's zero hardcoding policy

# ===========================================
# SUPABASE CONFIGURATION (Required)
# ===========================================
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ===========================================
# API ENDPOINTS
# ===========================================
EXPO_PUBLIC_API_URL=https://lusotown.com/api
EXPO_PUBLIC_WEB_URL=https://lusotown.com
EXPO_PUBLIC_STREAMING_URL=http://localhost:8080

# ===========================================
# EAS BUILD CONFIGURATION
# ===========================================
EAS_PROJECT_ID=your_eas_project_id

# ===========================================
# COMMUNITY METRICS (Override defaults)
# ===========================================
EXPO_PUBLIC_TOTAL_MEMBERS=750
EXPO_PUBLIC_TOTAL_STUDENTS=2150
EXPO_PUBLIC_UNIVERSITY_PARTNERSHIPS=8

# ===========================================
# BRAND CONFIGURATION (Override defaults)
# ===========================================
EXPO_PUBLIC_BRAND_NAME=LusoTown
EXPO_PUBLIC_PRIMARY_COLOR=#D4A574
EXPO_PUBLIC_SECONDARY_COLOR=#8B4513

# ===========================================
# CONTACT INFORMATION (Override defaults)
# ===========================================
EXPO_PUBLIC_SUPPORT_EMAIL=support@lusotown.com
EXPO_PUBLIC_DEMO_EMAIL=demo@lusotown.com
EXPO_PUBLIC_DEMO_PASSWORD=LusoTown2025!

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
EXPO_PUBLIC_ANALYTICS_ID=your_analytics_id
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn

# ===========================================
# SOCIAL MEDIA INTEGRATION
# ===========================================
EXPO_PUBLIC_TWITTER_HANDLE=@LusoTownUK
EXPO_PUBLIC_INSTAGRAM_HANDLE=@lusotownuk
EXPO_PUBLIC_FACEBOOK_PAGE=LusoTownUK

# ===========================================
# MAPS & LOCATION SERVICES
# ===========================================
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ===========================================
# PAYMENTS & SUBSCRIPTIONS
# ===========================================
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
EXPO_PUBLIC_DEVELOPMENT_MODE=true
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=info
EXPO_PUBLIC_ENABLE_FLIPPER=false
EXPO_PUBLIC_PERFORMANCE_MONITORING=true

# ===========================================
# PORTUGUESE CULTURAL FEATURES
# ===========================================
EXPO_PUBLIC_DEFAULT_LANGUAGE=en
EXPO_PUBLIC_SUPPORTED_LANGUAGES=en,pt
EXPO_PUBLIC_HERITAGE_CODE=pt
EXPO_PUBLIC_CULTURAL_FEATURES=true
EXPO_PUBLIC_LUSOPHONE_NATIONS=pt,br,cv,ao,mz,gw,st,tl

# ===========================================
# FEATURE FLAGS
# ===========================================
EXPO_PUBLIC_ENABLE_STREAMING=true
EXPO_PUBLIC_ENABLE_MATCHING=true
EXPO_PUBLIC_ENABLE_TRANSPORT=true
EXPO_PUBLIC_ENABLE_EVENTS=true
EXPO_PUBLIC_ENABLE_PREMIUM=true
EXPO_PUBLIC_ENABLE_BUSINESS_DIRECTORY=true

# ===========================================
# STREAMING PLATFORM
# ===========================================
EXPO_PUBLIC_RTMP_ENDPOINT=rtmp://localhost:1935/live
EXPO_PUBLIC_HLS_ENDPOINT=http://localhost:8080/hls

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
EXPO_PUBLIC_BIOMETRIC_AUTH=true
EXPO_PUBLIC_SECURE_STORAGE=true
EXPO_PUBLIC_CERTIFICATE_PINNING=false

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================
EXPO_PUBLIC_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_NOTIFICATION_SOUND=true
EXPO_PUBLIC_VIBRATION=true

# Development Notes:
# 1. Copy this file to .env.local
# 2. Replace the placeholder values with your actual credentials
# 3. The EXPO_PUBLIC_ prefix makes these available in the React Native app
# 4. See /shared/config/ for available configuration files