{
  "name": "lusotown-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "LusoTown - Portuguese Community Platform - Production Ready Monorepo",
  "workspaces": [
    "web-app",
    "mobile-app",
    "streaming",
    "packages/*",
    "shared"
  ],
  "scripts": {
    "dev": "cd web-app && npm run dev",
    "dev:mobile": "cd mobile-app && npm start",
    "dev:streaming": "cd streaming && npm start",
    "build": "cd web-app && npm run build",
    "build:mobile": "cd mobile-app && npm run build",
    "start": "cd web-app && npm run start",
    "lint": "npm run lint:web && npm run lint:mobile",
    "lint:web": "cd web-app && npm run lint",
    "lint:mobile": "cd mobile-app && npm run lint",
    "type-check": "npm run type-check:web && npm run type-check:mobile",
    "type-check:web": "cd web-app && npx tsc --noEmit",
    "type-check:mobile": "cd mobile-app && npm run type-check",
    "test": "npm run test:web && npm run test:mobile",
    "test:web": "cd web-app && npm run test",
    "test:mobile": "cd mobile-app && npm run test",
    "deploy": "vercel --prod",
    "deploy:mobile": "cd mobile-app && npx eas build --platform all",
    "install:all": "npm install && cd web-app && npm install && cd ../mobile-app && npm install && cd ../streaming && npm install",
    "clean": "rm -rf node_modules && rm -rf web-app/node_modules && rm -rf mobile-app/node_modules && rm -rf streaming/node_modules",
    "audit:hardcoding": "cd web-app && npm run audit:hardcoding",
    "mobile:ios": "cd mobile-app && npm run ios",
    "mobile:android": "cd mobile-app && npm run android",
    "mobile:web": "cd mobile-app && npm run web",
    "init": "scripts/claude-init-wrapper.sh",
    "update-ai-docs": "node scripts/enhanced-ai-guidance-updater.js",
    "update-ai-docs:basic": "node scripts/update-ai-guidance.js",
    
    "deploy:validate": "bash scripts/deployment/validate-deployment.sh",
    "deploy:optimize": "bash scripts/deployment/optimize-production.sh",
    "deploy:setup-monitoring": "bash scripts/deployment/setup-monitoring.sh",
    "deploy:production": "bash scripts/deployment/deploy-production.sh",
    "deploy:complete": "bash scripts/deployment/complete-deployment.sh",
    
    "deploy:pre-checks": "npm run deploy:validate && npm run deploy:optimize",
    "deploy:post-checks": "node scripts/monitoring/performance-monitor.js && node scripts/monitoring/cultural-monitor.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "portuguese",
    "community",
    "london",
    "uk",
    "nextjs",
    "react",
    "react-native",
    "typescript",
    "monorepo",
    "mobile-app",
    "lusophone"
  ]
}
